<Application x:Class="MissionTelemetry.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="OnStartup">
    <!-- <Application.StartupUri>MainWindow.xaml</Application.StartupUri> -->
    <Application.Resources>


        <Color x:Key="SpaceBlack">#0A0B0D</Color>
        <Color x:Key="PanelGrey">#16181D</Color>
        <Color x:Key="HoloCyan">#13E8FF</Color>
        <Color x:Key="HoloGreen">#4CFF6A</Color>
        <Color x:Key="HoloAmber">#FFC44C</Color>
        <Color x:Key="RebelGold">#FFCC00</Color>
        <Color x:Key="ImperialRed">#FF4D4D</Color>
        <Color x:Key="TextDim">#C7D2E1</Color>

        <SolidColorBrush x:Key="SpaceBlackBrush" Color="{StaticResource SpaceBlack}"/>
        <SolidColorBrush x:Key="PanelGreyBrush" Color="{StaticResource PanelGrey}"/>
        <SolidColorBrush x:Key="HoloCyanBrush" Color="{StaticResource HoloCyan}"/>
        <SolidColorBrush x:Key="HoloGreenBrush" Color="{StaticResource HoloGreen}"/>
        <SolidColorBrush x:Key="HoloAmberBrush" Color="{StaticResource HoloAmber}"/>
        <SolidColorBrush x:Key="RebelGoldBrush" Color="{StaticResource RebelGold}"/>
        <SolidColorBrush x:Key="ImperialRedBrush" Color="{StaticResource ImperialRed}"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="{StaticResource TextDim}"/>

        
        <DropShadowEffect x:Key="HoloGlow" Color="#22FFFFFF" BlurRadius="10" ShadowDepth="0" Opacity="1"/>
        <DropShadowEffect x:Key="StrongGlow" Color="#66FFFFFF" BlurRadius="18" ShadowDepth="0" Opacity="1"/>

        <!-- Sternfeld-Hintergrund -->
        <DrawingBrush x:Key="StarfieldBrush" Viewport="0,0,8,8" ViewportUnits="Absolute" TileMode="Tile">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="{StaticResource SpaceBlackBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,8,8"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing Brush="#77FFFFFF">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <EllipseGeometry Center="1,2" RadiusX="0.4" RadiusY="0.4"/>
                                <EllipseGeometry Center="6,1" RadiusX="0.5" RadiusY="0.5"/>
                                <EllipseGeometry Center="3,6" RadiusX="0.3" RadiusY="0.3"/>
                                <EllipseGeometry Center="7,7" RadiusX="0.35" RadiusY="0.35"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI Semibold"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="Auto"/>
        </Style>

        <!-- Button -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelGreyBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource RebelGoldBrush}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="{StaticResource RebelGoldBrush}"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Effect" Value="{StaticResource HoloGlow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="bd" Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="8"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="BorderBrush" Value="{StaticResource HoloCyanBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource HoloCyanBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#0DFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#111318"/>
            <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="All"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource HoloGlow}"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1B1E25"/>
            <Setter Property="Foreground" Value="{StaticResource RebelGoldBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#333945"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <!-- ListView -->
        <Style TargetType="ListView">
            <Setter Property="Background" Value="#111318"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect" Value="{StaticResource HoloGlow}"/>
        </Style>
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="0,1,0,1"/>
            <Setter Property="BorderBrush" Value="#2A2F3A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#141821"/>
            <Setter Property="Foreground" Value="{StaticResource TextDimBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource HoloCyanBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource HoloCyanBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style TargetType="Slider">
            <Setter Property="Foreground" Value="{StaticResource HoloCyanBrush}"/>
        </Style>

    </Application.Resources>
</Application>
    

